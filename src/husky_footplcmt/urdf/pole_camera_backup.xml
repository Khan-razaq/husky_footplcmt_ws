<?xml version="1.0"?>
<robot name="pole_box_robot">

  <!-- Dummy Root Link (to fix KDL warning) -->
  <link name="dummy_root"/>

  <!-- Base Link (Ground Reference) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.01"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Vertical Pole Link -->
  <link name="pole_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="3.0"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="3.0"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="3.75" ixy="0" ixz="0" iyy="3.75" iyz="0" izz="0.00625"/>
    </inertial>
  </link>

  <!-- Box on Top Link -->
  <link name="box_link">
    <visual>
      <geometry>
        <box size="0.4 0.4 0.2"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.4 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0533" ixy="0" ixz="0" iyy="0.0533" iyz="0" izz="0.0533"/>
    </inertial>
  </link>

  <!-- Joint connecting dummy root to base -->
  <joint name="dummy_to_base" type="fixed">
    <parent link="dummy_root"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Joint connecting base to pole -->
  <joint name="base_to_pole" type="fixed">
    <parent link="base_link"/>
    <child link="pole_link"/>
    <origin xyz="0 0 1.5" rpy="0 0 0"/>
  </joint>

  <!-- Joint connecting pole to box -->
  <joint name="pole_to_box" type="fixed">
    <parent link="pole_link"/>
    <child link="box_link"/>
    <origin xyz="0 0 1.6" rpy="0 0 0"/>
  </joint>

</robot>